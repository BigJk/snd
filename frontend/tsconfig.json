{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2018",
      "es2020",
      "es2021"
    ],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "js/*": [
        "./src/js/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "css/*": [
        "./src/css/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}