{
  "printWidth": 150,
  "useTabs": true,
  "jsxSingleQuote": true,
  "singleQuote": true,
  "tabWidth": 2,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^(.*).(css|scss)$",
    "^/img/(.*)$",
    "^mithril$",
    "^lodash-es",
    "<THIRD_PARTY_MODULES>",
    "^./(.*)$",
    "js/types/(.*)$",
    "js/workers/(.*)$",
    "js/core/(.*)$",
    "js/ui/spectre(.*)$",
    "js/ui/components(.*)$",
    "js/ui/views/(.*)$",
    "js/ui/[^\/]+$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
